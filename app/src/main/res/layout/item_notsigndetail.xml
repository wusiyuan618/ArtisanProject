<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img"
                android:layout_width="88dp"
                android:layout_height="88dp"/>
        <TextView
                android:layout_toRightOf="@id/img"
                android:id="@+id/tvName"
                android:text="姓名:"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@id/tvName"
                android:id="@+id/tvGroup"
                android:layout_marginLeft="80dp"
                android:textSize="12sp"
                android:text="班组："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_toRightOf="@id/img"
                android:id="@+id/tvUnit"
                android:layout_below="@id/tvName"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="工种："
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@id/tvUnit"
                android:layout_below="@id/tvGroup"
                android:layout_alignLeft="@id/tvGroup"
                android:layout_marginTop="10dp"
                android:id="@+id/tvleader"
                android:textSize="12sp"
                android:text="班主："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_toRightOf="@id/img"
                android:id="@+id/tvPhone"
                android:layout_below="@id/tvUnit"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="联系方式:"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@id/img"
                android:id="@+id/tvSignTime"
                android:layout_below="@id/tvPhone"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="打卡时间: "
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@id/tvSignTime"
                android:id="@+id/tvSignTimeContent"
                android:layout_below="@id/tvPhone"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#F0EFF5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
</LinearLayout>